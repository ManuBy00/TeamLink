<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500" prefWidth="480" style="-fx-background-color: linear-gradient(to bottom right, #4A90E2, #50E3C2);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controller.FormularioEmpresas">

    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 30;" AnchorPane.bottomAnchor="40" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="40">
        <Label text="Registro de Empresa" textFill="#333">
            <font>
                <Font name="Inter Semi Bold" size="24" />
            </font>
        </Label>

        <Separator />

        <!-- Nombre de la empresa -->
        <TextField fx:id="nombreEmpresaField" prefWidth="300" promptText="Nombre de la empresa" />

        <!-- Email -->
        <TextField fx:id="emailField" prefWidth="300" promptText="Correo electrónico" />

        <!-- Contraseña -->
        <PasswordField fx:id="passwordField" prefWidth="300" promptText="Contraseña" />

        <!-- Teléfono -->
        <TextField fx:id="telefonoField" prefWidth="300" promptText="Teléfono de contacto" />

        <!-- Dirección -->
        <TextField fx:id="direccionField" prefWidth="300" promptText="Dirección de la empresa" />

        <!-- Sector -->
        <ComboBox fx:id="sectorComboBox" prefWidth="300" promptText="Sector">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Tecnología" />
                    <String fx:value="Educación" />
                    <String fx:value="Salud" />
                    <String fx:value="Hostelería" />
                    <String fx:value="Otros" />
                </FXCollections>
            </items>
        </ComboBox>
      <TextArea opacity="0.5" prefHeight="200.0" prefWidth="200.0" text="Describe en qué consiste la actividad de tu empresa" />

        <!-- Botón de registro -->
        <Button fx:id="registrarButton" onAction="#registrarEmpresa" prefWidth="200" style="-fx-background-color: #4A90E2; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 8;" text="Registrar Empresa" />

        <!-- Mensaje de error -->
        <Label fx:id="errorLabel" textFill="red" visible="false" />

    </VBox>
</AnchorPane>
