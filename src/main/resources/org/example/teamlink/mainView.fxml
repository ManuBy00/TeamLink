            <HBox prefHeight="69.0" prefWidth="720.0">
               <children>
                  <Label fx:id="chatNameLabel" prefHeight="60.0" prefWidth="367.0" text="[Nombre del Chat]" textFill="#2C3E50">
                      <font>
                          <Font name="System Bold" size="24.0" />
