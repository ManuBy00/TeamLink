                        <Insets left="280.0" right="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="resumenButton" mnemonicParsing="false" onAction="#generarResumen" prefHeight="25.0" prefWidth="179.0" text="Resumen">
                     <HBox.margin>
                        <Insets right="20.0" top="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <ListView fx:id="mensajesListView" style="-fx-background-color: #ECF0F1; -fx-control-inner-background: #ECF0F1; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
