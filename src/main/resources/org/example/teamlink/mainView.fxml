            </ListView>
            <HBox alignment="CENTER_LEFT" prefHeight="59.0" prefWidth="687.0" spacing="10.0" style="-fx-background-color: #BDC3C7;"> <children>
                  <Button fx:id="adjuntarButton" mnemonicParsing="false" onAction="#adjuntar" prefHeight="25.0" prefWidth="69.0" text="ðŸ“Ž" />
                <TextArea fx:id="mensajeTextArea" prefHeight="39.0" prefWidth="592.0" promptText="Escribe un mensaje..." style="-fx-control-inner-background: white; -fx-border-color: #95A5A6; -fx-background-radius: 5; -fx-border-radius: 5;" HBox.hgrow="ALWAYS">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin></TextArea>
                <Button fx:id="sendMensajeButton" mnemonicParsing="false" onAction="#sendMensaje" prefHeight="25.0" prefWidth="114.0" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;" text="Enviar" />
            </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
