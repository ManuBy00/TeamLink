            </Label>
            <Label text="Tus Chats" textFill="#e0e0e0">
                <padding>
                    <Insets left="15.0" />
                </padding>
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
